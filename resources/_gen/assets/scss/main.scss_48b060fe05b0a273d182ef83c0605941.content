html{color:#222;font-size:18px;line-height:1.5}body{background-color:#fff;font-family:roboto,sans-serif;font-style:normal;font-weight:400;max-width:68em;margin:0 auto;padding:1em}a{transition:background-color ease-out .1s;text-decoration:none;border-radius:6px;color:#23d;padding:.12em .25em;margin:-.12em -.25em}a:hover{background-color:#ee8}::-moz-selection{background:#ee8;text-shadow:none}::selection{background:#ee8;text-shadow:none}audio,canvas,iframe,img,svg,video{vertical-align:middle}article{max-width:36em;margin:0 0 3rem}p{font-size:1rem;margin-bottom:1rem}h1,h2,h3,h4{font-weight:700;margin:2rem 0 1rem}h1{font-size:2.5em;line-height:1.1;letter-spacing:-.02em}h2{font-size:2em;font-weight:400;line-height:1.5;letter-spacing:-.01em}h3{font-size:1.25em;line-height:1.2}h4{font-size:1em;line-height:1.5}section{margin:3rem 0}blockquote{border:solid #59f;border-width:0 0 0 2px;margin:0;padding:1em}.link__icon-home{padding:.5rem}.icon-home{vertical-align:top}ul,ol{margin:1rem 0;padding:0;list-style-type:none}li{line-height:1.25;margin:0 0 .5em}pre,code{font-family:ibm plex mono,monospace;font-size:15px}footer{font-size:.8rem}footer p{font-size:1em}.video-wrapper{position:relative;padding-bottom:56.25%;height:0;margin:1em -1em}.video-wrapper iframe{max-width:100%;position:absolute;top:0;left:0;width:100%;height:100%}